<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>
    <form class="form signup-form" id="upload-profile-photos" action="/api/users" method="post"
      enctype="multipart/form-data">

      <label for="name-signup">name:</label>
      <input class="form-input" type="text" name="name" id="name-signup" />

      <label for="email-signup">email:</label>
      <input class="form-input" type="text" name="email" id="email-signup" />

      <label for="password-signup">password:</label>
      <input class="form-input" type="password" name="password" id="password-signup" />

      <label for="profile-photos-input">Browse for an image to upload</label>
      <input id="profile-photos" type="file" name="bruce-wayne" multiple>
      <br>
      <button class="btn btn-primary" type="submit" class="btn btn-primary">signup</button>

    </form>
  </div>
</div>

<script src="./js/login.js"></script>