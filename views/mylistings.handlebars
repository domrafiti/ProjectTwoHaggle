{{#if listings.length}}
{{#each listings as |listing| }}
<div class="card mb-3 mx-auto" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{image_path}}" alt="..." class="my-listing-photo">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        {{!-- <p class="card-text">{{looking_for}}</p> --}}
        <p class="card-text"><small class="text-muted">Created by {{../logged_name}} on {{format_date
            date_created}}</small>
        </p>
        <!--button is allowing us to redirect user to individual listing-->
        <a class="btn btn-primary" id="listing-view" href="/listing/{{id}}">View
          Listing</a>

      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<div class="row">
  <div>
    <h1>You have no listings.</h1>
  </div>
  <!--button is allowing us to redirect user to individual listing-->
  <div>
    <a class="btn btn-primary" href="/profile">GET HAGGLIN'</a>
  </div>
</div>
{{/if}}
